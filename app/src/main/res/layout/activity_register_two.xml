<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:backgraound="http://schemas.android.com/tools"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="الخطوة 2/4"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:textSize="18dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/title1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="المعلومات الشخصية"
            android:textAlignment="center"
            android:textColor="#D0565A5A"
            android:textSize="24dp"
            android:textStyle="bold" />



        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center"


            app:errorEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/wight"
                android:layout_width="200dp"
                android:layout_height="43dp"

                android:hint="الوزن"
                android:inputType="number"
                android:gravity="center"
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:errorEnabled="true">

            <AutoCompleteTextView
                android:id="@+id/height"
                android:layout_width="200dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:hint="الطول"
                android:inputType="number"
                android:textSize="15dp" />

        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="446dp"
            android:gravity="center"
            android:orientation="vertical"
            backgraound:context="com.tutorialkart.datepickerexample.MainActivity">


            <RadioGroup
                android:id="@+id/radio_group"
                android:layout_width="163dp"
                android:layout_height="43dp"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rb_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="radio_button_click"
                    android:text="ذكر" />

                <RadioButton
                    android:id="@+id/rb_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="radio_button_click"
                    android:text="انثى" />

            </RadioGroup>

            <TextView
                android:id="@+id/text_view_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:textSize="25dp" />

            <Button
                android:id="@+id/button_date_1"
                android:layout_width="163dp"
                android:layout_height="43dp"
                android:background="@drawable/rounded_buttons"
                android:text="تاريخ الميلاد"
                android:textColor="#FFFFFF"

                />


            <Button
                android:id="@+id/nxtTwoBtn"
                android:layout_width="147dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:background="@drawable/rounded_corner"
                android:text="التالي"
                android:textColor="#fff"
                android:textSize="20dp"

                />

        </LinearLayout>


    </LinearLayout>




</RelativeLayout>

