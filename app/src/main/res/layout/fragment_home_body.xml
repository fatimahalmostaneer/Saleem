<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_radus_white"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/ivAddView"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@color/material_blue_grey_80" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="اضافة وجبة"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:src="@drawable/soup_and_salad" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addWaterLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_radus_white"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal"

            >

            <ImageView
                android:id="@+id/ivAddView2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@color/material_blue_grey_80" />

            <TextView
                android:id="@+id/addWaterTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_water_glass" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/advicesLL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="8dp"
            android:background="@drawable/bg_radus_white"
            android:elevation="4dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/addAdviceIV"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="8dp"
                android:src="@drawable/ic_add_black_24dp"
                android:tint="@color/material_blue_grey_80" />

            <TextView
                android:id="@+id/advicesTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="النصائح الصحية"
                android:textColor="@color/material_blue_grey_80"
                android:textSize="18sp" />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>
