<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.registerThreeActivity">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fff"
        android:gravity="center"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="561dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="الخطوة 4/4"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/title1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="ما هو هدفك؟"
                android:textAlignment="center"
                android:textColor="#D0565A5A"
                android:textSize="24dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/goalOneBtn"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_buttons"
                android:text="خسارة وزن"
                android:textColor="#FFFFFF"
                android:textSize="20dp"

                />

            <Button
                android:id="@+id/goalTwoBtn"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_buttons"
                android:text="الحفاظ على الوزن"
                android:textColor="#fff"
                android:textSize="20dp"

                />

            <Button
                android:id="@+id/goalThreeBtn"
                android:layout_width="322dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="60dp"
                android:background="@drawable/rounded_buttons"
                android:text="زيادة الوزن"
                android:textColor="#fff"
                android:textSize="20dp"

                />


            <Button
                android:id="@+id/startBtn"
                android:layout_width="150dp"
                android:layout_height="49dp"
                android:layout_gravity="center"
                android:layout_marginTop="70dp"
                android:background="@drawable/rounded_corner"
                android:text="التالي"
                android:textColor="#fff"
                android:textSize="20dp"

                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="396dp"
            android:layout_height="105dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="600dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="22dp">

            >
            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/circle_without_border"
                >

            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="130dp"

                android:background="@drawable/circle_without_border"
               >


            </LinearLayout>

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="130dp"
                android:background="@drawable/circle_without_border" />

            <LinearLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:background="@drawable/circle">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="4"
                android:textColor="#fff"
                android:textSize="25dp"
                android:layout_centerInParent="true"
                android:textStyle="bold" />

            </LinearLayout>

        </RelativeLayout>




    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

